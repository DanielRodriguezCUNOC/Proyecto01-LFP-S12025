<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AnalizadorLexico.MessageBox">
    <StackPanel Margin="20">
        <TextBlock Name="MessageText" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
        <Button Content="OK" 
                Width="80" 
                Margin="0,20,0,0"
                Click="OnOkClick"/>
    </StackPanel>
</Window>